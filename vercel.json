{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm run client:build",
  "outputDirectory": "client/dist",
  "framework": "vite",
  "redirects": [
    {
      "source": "/",
      "destination": "https://nstconstruct.xyz/submit",
      "permanent": true,
      "has": [
        {
          "type": "host",
          "value": "submit.nstconstruct.xyz"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
